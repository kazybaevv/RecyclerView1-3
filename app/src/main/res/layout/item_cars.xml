<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".MainFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_img"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"
        android:layout_width="100dp"
        android:layout_height="120dp">

        <ImageView
            android:scaleType="centerCrop"
            tools:background="@mipmap/ic_launcher"
            android:id="@+id/cars"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />



    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/carName"
        android:layout_marginStart="14dp"
        app:layout_constraintTop_toTopOf="@id/card_img"
        app:layout_constraintStart_toEndOf="@id/card_img"
        android:textStyle="bold"
        android:textSize="23sp"
        android:textColor="@color/blue"
        android:text="Chevrolet Camaro v5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/carPrice"
        android:layout_marginStart="14dp"
        app:layout_constraintTop_toBottomOf="@id/carName"
        app:layout_constraintStart_toStartOf="@id/carName"
        app:layout_constraintEnd_toEndOf="@id/carName"
        android:text="50000$"
        android:textStyle="bold"
        android:textSize="23sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/releaseDate"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@id/carName"
        app:layout_constraintTop_toBottomOf="@id/carPrice"
        app:layout_constraintStart_toStartOf="@id/carName"
        android:textSize="20sp"
        android:text="2011"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>




</androidx.constraintlayout.widget.ConstraintLayout>